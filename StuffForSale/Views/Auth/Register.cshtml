@model StuffForSale.ViewModels.UserRegister

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-md-3">
        <br/>
        <form asp-controller="Auth" asp-action="Register" asp-antiforgery="true" method="post">
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <div>
                    <input asp-for="Login" type="text"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <div>
                    <input asp-for="Email" type="email"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <div>
                    <input asp-for="Password" type="password"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="RepeatPassword">Confirm Password</label>
                <div>
                    <input asp-for="RepeatPassword" type="password"/>
                </div>
            </div>

            <div asp-validation-summary="All"></div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

    </div>

    <div class="col-md-9">
        <br/><br/><br/>
        <img src="/images/login.jpg" style="width: 60%; height: 60%"/>
    </div>

</div>


